<div id="wrap">

<% include header %>

    <div id="mainview">
        <div class="sbtn">
            <ul>
                <li class="sbtn-tw">
                    <a href="https://twitter.com/share" class="twitter-share-button" data-lang="ja">ツイート</a>
    <script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="//platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script>
                </li>
                <li class="sbtn-fb">
                    <div class="fb-like" data-href="http://syaberi-house.com" data-send="true" data-width="450" data-show-faces="true"></div>
                </li>
            </ul>
        </div>
    </div>

    <div id="content">
    
        <div class="left-content">
        
            <div class="room">
                <div class="room-inbox">
                    <div class="room-icon">
                        <img class="icon_m" src="https://si0.twimg.com/profile_images/2624755802/43wqi7cb1o1lq5lzqmvo_reasonably_small.jpeg">
                    </div>
                    <div class="room-titlebox">
                        <h2 class="room-title"><%= chatroom.title %></h2>
                        <div class="room-username"><a href="#">by.<%= chatroom.owner %></a></div>
                    </div>
                </div>
                <div class="room-option">
                    <div class="room-date">作成日 2012年10月12日 12:30</div>
                    <div class="room-member">
                        <div class="room-member-open">全体に公開</div>
                        <div class="room-member-title">参加者</div>
                        <div class="room-member-icon" id="audienceview">
                            <a href="#"><img class="icon_ss" src="https://si0.twimg.com/sticky/default_profile_images/default_profile_0_normal.png"></a><a href="#"><img class="icon_ss" src="https://si0.twimg.com/sticky/default_profile_images/default_profile_0_normal.png"></a><a href="#"><img class="icon_ss" src="https://si0.twimg.com/sticky/default_profile_images/default_profile_0_normal.png"></a><a href="#"><img class="icon_ss" src="https://si0.twimg.com/sticky/default_profile_images/default_profile_0_normal.png"></a>
                        </div>
                        <div>今チャットルームにいる人:<span id="peaple"></span>人</div>
                    </div>
                </div>
            </div><!-- room -->
            
            <div class="message">
            <% chats.forEach(function(chat) { %>
                
                <% if (chatroom.ownerId == chat.user_id) { //ownerの投稿 %>
                <div class="message-owner-inbox">
                    <div class="owner-icon">
                        <img class="icon_m" src="<%= chat.userimage %>">
                    </div>
                    <div class="owner-titlebox">
                        <p class="owner-title"><%- esc(chat.message) %></p>
                        <img class="owner-img" src="http://www1.u-netsurf.ne.jp/~tukinowa/gallery/picture/fuji-gennsou.jpg">
                        <div class="owner-username"><a href="#">by.<%= chat.username %></a></div>
                        <div class="owner-date"><%= chat.time %> [1]</div>
                        <div class="thread_article_date delete_cmt" data-chatid="<%= chat.id %>">[x]閉じる</div>
                    </div>
                </div>
                <% }else{ //memberの投稿%>
                <div class="message-member-inbox">
                    <div class="member-icon">
                        <img class="icon_m" src="<%= chat.userimage %>">
                    </div>
                    <div class="member-titlebox">
                        <p class="member-title"><%- esc(chat.message) %></p>
                        <div class="member-username"><a href="#">by.<%= chat.username %></a></div>
                        <div class="member-date"><%= chat.time %> [2]</div>
                        <div class="thread_article_date delete_cmt" data-chatid="<%= chat.id %>">[x]閉じる</div>
                    </div>
                </div>
                <% } %>
                
            <% }) %>
            </div><!-- message -->

        </div><!-- left-content -->
        
        <div class="right-content">
            
            <div class="cboard">
                <div class="cboard-titlebox">
                    <div class="cboard-icon">Q</div>
                    <div class="cboard-title">詳しいひと募集板</div>
                </div>
                <div class="cboard-entry">
                    <ul>
                        <li>
                           <input type="button" class="button_yg full_width" value="投稿する">
                        </li>
                        <li>
                            <div class="cboard-entry-title">飲食店経営者のひといませんか？</div>
                            <div class="cboard-entry-userbox">
                                <div class="cboard-entry-username">ビーフ</div>
                                <div class="cboard-entry-icon"><img class="icon_ss" src="https://si0.twimg.com/sticky/default_profile_images/default_profile_0_normal.png"></div>
                            </div>
                        </li>
                        <li>
                            <div class="cboard-entry-title">主婦歴長いひとと話したいです。</div>
                            <div class="cboard-entry-userbox">
                                <div class="cboard-entry-username">ビーフ</div>
                                <div class="cboard-entry-icon"><img class="icon_ss" src="https://si0.twimg.com/sticky/default_profile_images/default_profile_0_normal.png"></div>
                            </div>
                        </li>
                        <li>
                            <div class="cboard-entry-title">毎日の献立に困らないこつを教えて欲しい・・・。</div>
                            <div class="cboard-entry-userbox">
                                <div class="cboard-entry-username">ビーフ</div>
                                <div class="cboard-entry-icon"><img class="icon_ss" src="https://si0.twimg.com/sticky/default_profile_images/default_profile_0_normal.png"></div>
                            </div>
                        </li>
                        <li>
                            <div class="cboard-entry-title">最近ハワイに行ったひと居ませんか？</div>
                            <div class="cboard-entry-userbox">
                                <div class="cboard-entry-username">ビーフ</div>
                                <div class="cboard-entry-icon"><img class="icon_ss" src="https://si0.twimg.com/sticky/default_profile_images/default_profile_0_normal.png"></div>
                            </div>
                        </li>
                        <li>
                           <input type="button" class="button_yg full_width" value="もっと見る">
                        </li>
                    </ul>
                </div>
            </div>
            
        </div><!-- right-content -->

        
    <section id="section_thread_right">
      <div id="lines1" class="chat">
        <% chats.forEach(function(chat) { %>
          <article class="chat-content" id="chat-content-<%= chat.id %>">
          <% if (isAuth && chat.user_id == userId) { %>
              <div class="thread_article_thumb fltr"><img src="<%= chat.userimage %>" width="40" height="40"></div>
              <div class="thread_article_box_arrowr"></div>
              <div class="thread_article_box magr22 fltr">
                <div class="thread_article_box_wrapp">
                  <img src="/img/article_close.png" width="18" height="18" alt="閉じる" class="thread_article_date delete_cmt" data-chatid="<%= chat.id %>">
                  <h4><%= chat.username %></h4>
                  <div class="thread_article_date"><%= chat.time %></div>
                  <div class="thread_article_txt"><%- esc(chat.message) %></div>
                </div>
              </div>
          <% } else { %>
              <div class="thread_article_thumb fltl"><img src="<%= chat.userimage %>" width="40" height="40"></div>
              <div class="thread_article_box_arrowl"></div>
              <div class="thread_article_box magl22 fltl">
                <div class="thread_article_box_wrapp">
                  <% if (chatroom.status !== 2 && !isUrlOpen && isOwner) { %>
                    <% if (chat.invited == 0) { %>
                    <a href="javascript:void(0);" class="start_chat" data-userid="<%= chat.user_id %>" data-chatid="<%= chat.id %>">[招待]</a>
                    <% } else { %>
                      [招待済]
                    <% }%>
                  <% } %>
                  <h4><%= chat.username %></h4>
                  <div class="thread_article_date"><%= chat.time %></div>
                  <div class="thread_article_txt"><%- esc(chat.message) %></div>
                </div>
              </div>
          <% } %>
          </article>
        <% }) %>

      </div>
    </section><!--/section_thread_right-->

<!--投稿コメントエリア-->
<section id="section_thread_bottom"
  <% if ((!isMember && isUrlOpen) ||
        (chatroom.status !== 2 && !isUrlOpen && (!isAuth || locals.alreadyDone))) { %>
    style="display:none;"
  <% } %>>
  <div id="thread_comment_box">
    <h3 id="comment_h3">コメント</h3>
  <table id="comment_wrapp">
  <tr>
  <td colspan="6">
  <div id="comment_wrapp_inputarea"><textarea type="text" value="" id="message1" style="overflow:hidden; resize:none; word-wrap:normal;" cols="60" wrap="off"></textarea></div>
  </td>
  </tr>
  <tr>
  <td width="77"><a href="javascript:void(0)" id="emoji_butt"><img src="/img/room_pull.gif" width="67" height="30"></a></td>
  <!--td width="90"><a href="#"><img src="/img/room_attach.gif" width="67" height="30"></a></td-->
  <td width="90" style="vertical-align:top;">
  <div id="uploadings">
  <input type="file" id="uploadings_input" name="dec_image2" value="">
  <input type="hidden" id="realUpfile" value="">
  </div>
  </td>
  <td>
  <label for="submit_1">
  <input type="image" src="/img/room_toukou.gif" class="fltr" id="submit_1">
  </label>
  </div>
  </td>
  </tr>
  </table><div id="scrl_top"><a href="javascript:void(0);" title="ページTOP">▲</a></div>
  </div>
</section><!--/section_thread_bottom-->

</div><!--/#contents_wrapp_inside-->
</div><!--/#contents_wrapp-->


<div class="main-img">

<div class="ticket-wrapper" style="width:969px;">
<div class="left" style="display:none;">
  <h1 style="font-size:26px;padding:20px;"></h1>
</div>
<div class="header-icon" id="users_view"></div>
</div>

