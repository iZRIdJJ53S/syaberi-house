<!DOCTYPE HTML>
<html lang="ja">
<head>
<title>ユーザ登録｜シャベリハウス</title>
<meta charset="UTF-8">
<meta name="description" content="友人やちょっとした知り合い、共通の仲間と家(コミュニティ)を作り、楽しくシャベリあおう！">
<meta name="keywords" content="シャベリハウス,チャット,趣味,興味,twitter,facebook,mixi">
<link rel="shortcut icon" href="http://syaberi-house.com/images/favicon.ico" />
<link rel="stylesheet" href="/css/html5reset-1.6.1.css" />
<link rel="stylesheet" type="text/css" href="/css/style.css">
<link rel="stylesheet" href="/css/common.css" />
<!--[if lt IE 9]><script src="http://html5shiv.googlecode.com/svn/trunk/html5.js" charset="UTF-8"></script><![endif]-->
<script src="/js/lib/jquery-1.8.2.js"></script>
<script src="/js/lib/jquery.cookie.js"></script>
<script src="/js/lib/underscore.js"></script>
<script src="/js/lib/backbone.js"></script>
<script src="/js/lib/backbone-validation.js"></script>
<script src="/js/menu.js"></script>
<script src="/js/util.js"></script>
<script src="/js/models/chatroom.js"></script>
<script src="/js/views/createChatroom.js"></script>
<script src="/js/createChatroomApp.js"></script>
</head>
<body>
<div id="wrapper">

<% include header %>

<form id="full-form-tag" name="full-form-tag" method="post" enctype="multipart/form-data">
<div id="contents_wrapp">
  <div id="contents_wrapp_inside">
    <section id="make_community">
      <h3 id="makecommunity_h3">新しいチャットルームをつくる</h3>
      <form action="" method="">
      <table id="makecommunity_table">
        <tr>
          <th>カテゴリ<br><span style="color:#FF1881">※必須</span></th>
          <td>
          <select id="categoryId" name="categoryId">
            <option value="">選択してください</option>
            <% categories.forEach(function(category) { %>
            <option value="<%= category.id %>"><%= category.title %></option>
            <% }) %>
          </select>
          <br><span id="error_categoryId" class="error"></span></td>
        </tr>
        <tr>
          <th>チャットルーム名<br><span style="color:#FF1881">※必須</span></th>
          <td><div class="input_makecommunity_name_area"><input type="text" name="title" id="title" value=""></div><span id="error_title" class="error"></span></td>
        </tr>
        <tr>
        <th>説明<br><span style="color:#FF1881">※必須</span></th>
          <td><div id="input_makecommunity_name_textarea" ><textarea id="description" name="description"></textarea></div><span id="error_description" class="error"></span></td>
        </tr>
        <tr>
          <th>管理人</th>
          <td><%= userName %></td>
        </tr>
      </table>
    </section>
      <div class="txtc magt20 magb200">
        <input type="image" src="/img/makecommunity_submit.png" width="396" height="73" alt="送信" id="submit_1">
      </div>
    </section>
  </div><!--/#contents_wrapp_inside-->
</div><!--/#contents_wrapp-->
</form>

<% include footer %>

</body>
</html>
