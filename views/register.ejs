<body>
<div id="wrapper">

<% include header %>

<form id="full-form-tag" name="full-form-tag" method="post" action="/login" enctype="multipart/form-data">
<div id="contents_wrapp">
  <div id="contents_wrapp_inside">
    <section id="make_community">
      <h3 id="makecommunity_h3">ユーザ登録</h3>
      <form action="" method="">
      <table id="makecommunity_table">
        <tr>
          <th>ニックネーム<br><span style="color:#FF1881">※必須</span></th>
          <td><div class="input_makecommunity_name_area"><input type="text" name="userName" id="userName" value="<%= userName %>"></div><span id="error_userName" class="error"></span></td>
        </tr>
        <tr>
          <th>メールアドレス<br><span style="color:#FF1881">※必須</span></th>
          <td><div class="input_makecommunity_name_area"><input type="text" name="email" id="email" value=""></div><span id="error_email" class="error"></span></td>
        </tr>
      </table>
      <div id="makecommunity_detail">

      <div id="terms" style="margin:30px;">

      <div style="overflow:auto;height:150px;border:1px #ccc solid; padding:10px; background-color:#fff; text-align:left;">
      <% include terms %>
      </div>
      <div style="text-align:center;padding-top:20px;">
            <input type="checkbox" name="terms_check" id="terms_check" style="line-height:18px;height:24px;font-size:18px;"><span style="margin-left:10px;"><label for="terms_check">本サービスの利用規約に同意します(必須)</label></span>
            <br/><span class="error_terms_check_requ"></span>
      </div>
      </div>
      </div>
    </section>
      <div class="txtc magt20 magb200">
        <input type="image" src="/img/makecommunity_submit.png" width="396" height="73" alt="送信" id="submit_1">
      </div>
    </section>
  </div><!--/#contents_wrapp_inside-->
</div><!--/#contents_wrapp-->
</form>

<% include footer %>

</body>
</html>
